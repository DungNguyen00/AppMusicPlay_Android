<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/textviewtitleplaylist"
            android:text="Nhịp điệu cảm xúc"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#3e3b3b"
            android:layout_height="wrap_content"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listviewplaylist"
            android:layout_below="@id/textviewtitleplaylist">
        </ListView>
        <TextView
            android:text="Xem thêm playlist"
            android:textSize="19sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/iconmoreplaylist"
            android:paddingLeft="5dp"
            android:layout_below="@+id/listviewplaylist"
            android:id="@+id/textviewmoreplaylist"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="8dp"
            android:textColor="#0a0a0a"
            android:background="#c9c7c7"
            android:layout_height="wrap_content"/>

    </RelativeLayout>